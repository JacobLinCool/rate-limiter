{
	"include": ["**/*.ts"],
	"exclude": ["node_modules", "lib"],
	"compilerOptions": {
		"target": "ESNext",
		"lib": ["ESNext"],
		"module": "commonjs",
		"moduleResolution": "node",
		"declaration": true,
		"resolveJsonModule": true,
		"noEmitOnError": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}
